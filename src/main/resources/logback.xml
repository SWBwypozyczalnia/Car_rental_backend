<configuration>

    <!-- Ustawienia konfiguracji dla konsoli -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Ustawienia konfiguracji dla pliku -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/opt/TAI-PZ/backend/logFile.log</file> <!-- Ścieżka do pliku logów -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Definicja poziomu logowania INFO lub wyższego -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
